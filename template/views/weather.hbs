<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Weather Web</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+AU+SA:wght@100..400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    
<div class="main">


{{>nav}}

    <div class="container-fluid weather_con">
        <div class="row">
            <div class="col-md-12 col-12 form">
                <form action="" id="from_data">
                <input type="text" name="city_name" placeholder="Enter City Name">
                <button class="btn" id="btn">Search</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-12 content">
            
                <div class="show_dt">
                    <p id="day"></p>
                    <p id="date"></p>
                </div>

        <p id="msg">Enter city name to get weather Updates...</p>
                <div id="output">
                    <p id="city"></p>
                    <div class="temp">
                        <h1 id="temprature"></h1>
                        <p id="condition"></p>
                    </div>   
                </div>
            </div>
        </div>
    </div>




{{>footer}}
</div>
<script src="index.js"></script>
<script>

  let day_element=document.getElementById('day');
  let date_element=document.getElementById('date');

  let day=()=>{

    let d=new Date();
    let days=['Sun','Mon','Tue','Wed','Thu','Fri','Sat'];
    return days[d.getDay()];
  }
    let date=()=>{

        let d=new Date();
        let months=['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'];
        let day=d.getDate();
        let month=months[d.getMonth()];
        return month+" "+day;
       
    }

    
    day_element.innerHTML=day();
    date_element.innerHTML=date();

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>